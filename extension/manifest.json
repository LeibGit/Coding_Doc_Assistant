{
  "manifest_version": 3,
  "name": "Code_Doc_Assist",
  "description": "Get AI insights to explain coding documentation better",
  "version": "1.0", 
  "host_permissions": [
    "<all_urls>"
  ],

  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "sidePanel",
    "scripting"
  ],

  "icons": {
    "16": "assets/cd_icon_16.png",
    "32": "assets/cd_icon_32.png",
    "48": "assets/cd_icon_48.png",
    "128": "assets/cd_icon_128.png"
  },

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "action": {
    "default_title": "Open AI assistant"
  },

  "side_panel": {
    "default_path": "sidepanel/main.html"
  }
}
